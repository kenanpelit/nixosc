# modules/home/gammastep/default.nix
# ==============================================================================
# Gammastep Screen Temperature Configuration
# ==============================================================================
{ config, lib, pkgs, ... }:
{
  # =============================================================================
  # Service Configuration
  # =============================================================================
  services.gammastep = {
    enable = true;
    provider = "manual";
    
    # =============================================================================
    # Location Settings
    # =============================================================================
    latitude = 41.0;  # İstanbul için
    longitude = 28.9; # İstanbul için
    
    # =============================================================================
    # Temperature Settings
    # =============================================================================
    temperature = {
      day = 4500;
      night = 3700;
    };

    # =============================================================================
    # Brightness Settings
    # =============================================================================
    settings = {
      general = {
        brightness-day = 1.0;
        brightness-night = 0.8;
      };
    };
  };
}
