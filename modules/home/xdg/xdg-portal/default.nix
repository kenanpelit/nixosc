# modules/home/xdg-portal/default.nix
# ==============================================================================
# XDG Portal Configuration
# ==============================================================================
{ pkgs, ... }:
{
 xdg = {
   portal = {
     # =============================================================================
     # Base Configuration
     # =============================================================================
     enable = true;

     # =============================================================================
     # Portal Implementation
     # =============================================================================
     extraPortals = with pkgs; [
       xdg-desktop-portal-gtk
       xdg-desktop-portal-hyprland
     ];

     # =============================================================================
     # Portal Settings
     # =============================================================================
     config = {
       common = {
         default = [ "gtk" ];
         "org.freedesktop.impl.portal.Settings" = [ "gtk" ];
       };
     };
   };
 };
}
