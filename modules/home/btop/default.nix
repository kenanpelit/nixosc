# modules/home/btop/default.nix
# ==============================================================================
# Btop System Monitor Configuration
# ==============================================================================
{ pkgs, ... }:
{
  # =============================================================================
  # Program Configuration
  # =============================================================================
  programs.btop = {
    enable = true;
    settings = {
      color_theme = "TTY";
      theme_background = false;
      update_ms = 500;
      rounded_corners = false;
    };
  };

  # =============================================================================
  # Additional Packages
  # =============================================================================
  home.packages = (with pkgs; [ nvtopPackages.intel ]);
}
